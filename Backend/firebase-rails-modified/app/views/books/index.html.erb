<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Authors</th>
      <th>Publisher</th>
      <th>Publisheddate</th>
      <th>Description</th>
      <th>Isbn</th>
      <th>Pagecount</th>
      <th>Categories</th>
      <th>Imagelinks</th>
      <th>Country</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.authors %></td>
        <td><%= book.publisher %></td>
        <td><%= book.publishedDate %></td>
        <td><%= book.description %></td>
        <td><%= book.isbn %></td>
        <td><%= book.pageCount %></td>
        <td><%= book.categories %></td>
        <td><%= book.imageLinks %></td>
        <td><%= book.country %></td>
        <td><%= book.price %></td>
        <td><%= link_to 'Show', user_house_room_wall_shelf_book_path(@user,
        @house,@room,@wall,@shelf,book) %></td>
        <td><%= link_to 'Edit', edit_user_house_room_wall_shelf_book_path(@user,
        @house,@room,@wall,@shelf,book) %></td>
        <td><%= link_to 'Destroy', user_house_room_wall_shelf_book_path(@user,
        @house,@room,@wall,@shelf,book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

