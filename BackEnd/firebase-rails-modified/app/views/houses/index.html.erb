<p id="notice"><%= notice %></p>

<h1>Houses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Ismainhouse</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.name %></td>
        <td><%= house.latitude %></td>
        <td><%= house.longitude %></td>
        <td><%= house.isMainHouse %></td>
        <td><%= link_to 'Show', [@user] %></td>
        <td><%= link_to 'Edit', edit_user_house_path(@user,house) %></td>
        <td><%= link_to 'Destroy', [@user,house], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New House', new_user_house_path(@user) %>
